<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= shop.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/shops/<%= shop._id %>/?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="shop[name]" value="<%= shop.name %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" name="shop[price]" value="<%= shop.price %>" min="0.01" step="0.01">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="shop[image]" value="<%= shop.image %>>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="shop[description]" value="<%= shop.description %>>">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>

            </form>

            <a href="/shops">Go Back</a>

        </div>



    </div>

</div>

<% include ../partials/footer %>